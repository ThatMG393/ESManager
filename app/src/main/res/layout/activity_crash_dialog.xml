<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp">
    
    <TextView
        android:id="@+id/crash_message"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="8dp"
        android:textSize="16sp"/>
    
    <LinearLayout
        android:id="@+id/crash_comment_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="2dp">
        
        <TextView
            android:id="@+id/crash_comment_hint"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"/>
        
        <EditText
            android:ems="10"
            android:id="@+id/crash_comment_input"
            android:inputType="textPersonName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLength="200"
            android:textSize="18sp"
			android:hint="Explanation..." />
    
    </LinearLayout>
    
    <TextView
        android:id="@+id/crash_overview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
		android:paddingTop="16dp" />
    
    <Button
        android:id="@+id/crash_view_logs"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="View logs"
        android:textSize="12sp"/>
    
    <TextView
        android:id="@+id/crash_logs"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:visibility="gone"
        android:scrollbars="vertical"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="72dp">

	<ImageView
		android:src="@android:drawable/ic_delete"
		android:layout_height="55dp"
		android:layout_centerVertical="true"
		android:id="@+id/modPreview"
		android:layout_width="100dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Mod Name"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_toEndOf="@id/modPreview"
		android:layout_margin="10dp"
		android:id="@+id/modName"/>

	<TextView
		android:layout_width="230dp"
		android:layout_height="wrap_content"
		android:text="Description"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_below="@id/modName"
		android:layout_alignParentBottom="false"
		android:layout_marginBottom="14dp"
		android:id="@+id/modDesc"
		android:layout_toEndOf="@id/modPreview"
		android:layout_marginStart="10dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Author"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:id="@+id/modAuthor"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="0.x.x"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_alignParentEnd="true"
		android:id="@+id/modVersion"/>

</RelativeLayout>

